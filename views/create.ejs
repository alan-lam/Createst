<%- include('partials/header') %>

    <div class="container">
      <h1 class="test-title"><%= testTitle %></h1>
      <form action="/test/<%= testTitle %>" method="post">
        <div class="form-group">
          <label>Question</label>
          <textarea class="form-control" type="text" name="question" required></textarea>
          <label>Answer</label>
          <textarea class="form-control" name="answer"></textarea required>
        </div>
        <button class="btn btn-primary" type="submit" name="testTitle" value="<%= testTitle %>">Submit</button>
      </form>
    </div>

<%- include('partials/footer') %>
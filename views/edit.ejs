<%- include('partials/header') %>

    <div class="container padding-top">
      <form action="/back" method="post">
        <button type="submit"><i class="fas fa-long-arrow-alt-left fa-2x"></i></button>
      </form>
      <h1 class="test-title">Edit <%= testTitle %></h1>
      <form action="/test/<%= testTitle %>" method="post">
        <% questions.forEach((question) => { %>
          <div class="form-group">
            <label>Question</label>
            <textarea class="form-control" type="text" name="question"><%= question.question %></textarea>
            <label>Answer</label>
            <textarea class="form-control" name="answer"><%= question.answer %></textarea>
          </div>
        <% }); %>
        <a href="#" onclick="createForm();">+ Add Question</a>
        <br><br>
        <input type="password" name="password" value="<%= password %>" />
        <button class="btn btn-primary" type="submit" name="testTitle" value="<%= testTitle %>">Make Changes</button>
      </form>
    </div>

<%- include('partials/footer') %>